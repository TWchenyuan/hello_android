<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/relative_title"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/title"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/relative_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/relative_developer"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/relative_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/relative_developer"
            android:padding="10dp"
            android:text="@string/relative_teacher"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>
        <TextView
            android:id="@+id/relative_center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/relative_center"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="24sp" />

    <TextView
        android:id="@+id/relative_left"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/relative_center"
        android:padding="10dp"
        android:text="@string/relative_left"
        android:background="@color/green"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/relative_right"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/relative_center"
        android:padding="10dp"
        android:text="@string/relative_left"
        android:background="@color/green"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/relative_up"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/relative_center"
        android:padding="10dp"
        android:text="@string/relative_up"
        android:background="@color/green"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/relative_down"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relative_center"
        android:padding="10dp"
        android:text="@string/relative_down"
        android:background="@color/green"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/relative_ui_designer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/relative_developer1"
            android:padding="10dp"
            android:text="@string/relative_ui_designer"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/relative_developer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:text="@string/relative_developer"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>