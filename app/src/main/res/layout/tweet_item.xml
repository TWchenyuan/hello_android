<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tweet_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/avatar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:src="@mipmap/avatar"
        app:layout_constraintEnd_toStartOf="@id/nick_view"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/nick_view"
        app:layout_constraintStart_toEndOf="@id/avatar_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/content_detail_view"
        android:textStyle="bold"
        android:textSize="@dimen/large_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/content_detail_view"
        app:layout_constraintStart_toEndOf="@id/avatar_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nick_view"
        app:layout_constraintBottom_toTopOf="parent"
        android:paddingStart="10dp"
        android:textSize="@dimen/large_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>